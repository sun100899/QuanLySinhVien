<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AddClassActivity">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Thêm lớp học"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edt_class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên lớp"
        android:layout_below="@+id/tv_label"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="18dp" />
    <EditText
        android:id="@+id/edt_class_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:layout_below="@+id/edt_class_name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="18dp" />

    <Button
        android:id="@+id/btn_addclass"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_class_description"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="18dp"
        android:text="Xác nhận" />
</RelativeLayout>